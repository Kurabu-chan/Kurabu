{
    "post": {
        "description": "Login with a username and password using the jwt flow",
        "tags": [
            "JWT"
        ],
        "parameters": [
            {
                "name": "email",
                "in": "query",
                "description": "The email of the user",
                "required": true,
                "example": "bill@microsoft.com",
                "schema": {
                    "type": "string",
                    "format": "email"
                }
            },
            {
                "name": "pass",
                "in": "query",
                "description": "The password of the user",
                "required": true,
                "example": "Password123!",
                "schema": {
                    "type": "string"
                }
            }
        ],
        "responses": {
            "200": {
                "description": "Success"
            },
            "403": {
                "content": {
                    "application/json": {
                        "schema": {
                            "oneOf": [
                                {
                                    "$ref": "../../../errors/badLoginError.schema.json"
                                },
                                {
                                    "$ref": "../../../errors/tokensNotPresentError.schema.json"
                                }
                            ]
                        },
                        "examples": [
                            {
                                "$ref": "../../../errors/badLoginError.example.json"
                            },
                            {
                                "$ref": "../../../errors/tokensNotPresentError.example.json"
                            }
                        ]
                    }
                }
            },
            "404": {
                "description": "Media not found. More info disclosed in error message"
            },
            "422": {
                "description": "Missing or malformed required parameter state. More info disclosed in error message"
            },
            "500": {
                "description": "Undocumented and unexpected error"
            }
        }
    }
}