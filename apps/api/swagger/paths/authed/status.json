                    }
                }
            },
            "500": {
                "content": {
                    "application/json": {
                        "schema": {
                            "oneOf": [
                                {
                                    "$ref": "../../errors/generalError.schema.json"
                                }
                            ]
                        },
                        "examples": {
                            "0": {
                                "$ref": "../../errors/generalError.example.json"
                            }
                        }
                    }
